<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <com.loopj.android.image.SmartImageView 
        android:id="@+id/siv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/bt_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置"   
       
        android:layout_marginTop="2dp"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/bt_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/siv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:text="编辑"
        android:layout_below="@id/bt_change" />

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/siv"
        >
        <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        >
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:text="学号:"
		        android:textSize="20sp"
		        />
		    <EditText 
		        android:id="@+id/et_id"
		        android:layout_width="140dp"
		        android:layout_height="wrap_content"
		        android:editable="false"
		        android:text=""
		        android:textSize="20sp"
		        />
	    </LinearLayout>
        <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        >
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:text="姓名:"
		        android:textSize="20sp"
		        />
		    <EditText 
		        android:id="@+id/et_name"
		        android:layout_width="140dp"
		        android:layout_height="wrap_content"
		        android:editable="false"
		        android:text=""
		        android:textSize="20sp"
		        />
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        >
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:text="性别:"
		        android:textSize="20sp"
		        />
		    <EditText 
		        android:id="@+id/et_sex"
		        android:layout_width="140dp"
		        android:layout_height="wrap_content"
		        android:editable="false"
		        android:text=""
		        android:textSize="20sp"
		        />
	    </LinearLayout>
        
    </LinearLayout>
    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_below="@+id/siv"
	        >
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	       android:layout_marginTop="10dip" >
	        <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="邮箱:"
		        android:layout_marginTop="20dp"
    			android:layout_marginLeft="30dp"
		        android:textSize="20sp"
		        />
		    <EditText 
		        android:id="@+id/et_email"
		        android:layout_width="250dp"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="15dp"
    			android:layout_marginLeft="10dp"
    			android:layout_marginRight="10dp"
		        android:editable="false"
		        android:text=""
		        android:textSize="20sp"
		        />
	    </LinearLayout>
	     <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        >
	        <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="电话:"
		        android:layout_marginTop="15dp"
    			android:layout_marginLeft="30dp"
		        android:textSize="20sp"
		        />
		    <EditText 
		        android:id="@+id/et_phone"
		        android:layout_width="250dp"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="15dp"
    			android:layout_marginLeft="10dp"
    			android:layout_marginRight="10dp"
		        android:editable="false"
		        android:text=""
		        android:textSize="20sp"
		        />
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        >
	        <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="公寓号:"
		        android:layout_marginTop="15dp"
		        android:layout_marginLeft="30dp"
		        android:textSize="20sp"
		        />
		    <EditText 
		        android:id="@+id/et_buildingid"
		        android:layout_width="80dp"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="15dp"
		        android:editable="false"
		        android:text=""
		        android:textSize="20sp"
		        />
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="宿舍号:"
		        android:layout_marginTop="15dp"
		        android:textSize="20sp"
		        />
		    <EditText 
		        android:id="@+id/et_dormitoryid"
		        android:layout_width="80dp"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="15dp"
		        android:editable="false"
		        android:text=""
		        android:textSize="20sp"
		        />
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        >
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="15dp"
    			android:layout_marginLeft="30dp"
		        android:text="床位号:"
		        android:textSize="20sp"
		        />
		    <EditText 
		        android:id="@+id/et_bedNum"
		        android:layout_width="80dp"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="15dp"
		        android:editable="false"
		        android:text=""
		        android:textSize="20sp"
		        />
	        <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="宿舍长:"
		        android:layout_marginTop="15dp"
		        android:textSize="20sp"
		        />
		    <EditText 
		        android:id="@+id/et_roomheader"
		        android:layout_width="80dp"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="15dp"
		        android:editable="false"
		        android:text=""
		        android:textSize="20sp"
		        />
	    </LinearLayout>
		<LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        >
	        <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="所属院系:"
		        android:layout_marginTop="15dp"
		        android:layout_marginLeft="30dp"
		        android:textSize="20sp"
		        />
		    <EditText 
		        android:id="@+id/et_academy"
		        android:layout_width="200dp"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="15dp"
		        android:editable="false"
		        android:text=""
		        android:textSize="20sp"
		        />
		   
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        >
	         <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="15dp"
    			android:layout_marginLeft="30dp"
		        android:text="所在班级:"
		        android:textSize="20sp"
		        />
		    <EditText 
		        android:id="@+id/et_className"
		        android:layout_width="200dp"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="15dp"
		        android:editable="false"
		        android:text=""
		        android:textSize="20sp"
		        />
	    </LinearLayout>
	    
	</LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/syspage_mainpage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:text="首页" />

        <Button
            android:id="@+id/syspage_my"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:text="我的" />
    </LinearLayout>

</RelativeLayout>
